@model company.BL.Model.EmployeeBounsVM
@inject company.BL.Interface.IEmployeeRep employeeRep
@inject company.BL.Interface.IBonusRep bonusRep


@{
    ViewBag.Title = "Delete Employee Bouns";
}

<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>Delete Employee Bouns</h2>

            </div>
            <div class="body">
                <form id="form_validation" asp-asp-controller="EmployeeBonus" asp-action="Delete" method="post">

                    <div class="row">
                        <div class="col-6">


                            <div class="form-group form-float">
                                <select asp-for="employeeId" class="form-control show-tick" disabled>
                                    <option value="">-- Please select Employee  --</option>
                                    @{
                                        foreach (var item in employeeRep.GetAll())
                                        {
                                            <option value="@item.id">@item.employeeName</option>
                                        }
                                    }
                                </select>

                            </div>

                            <div class="form-group form-float">
                                <div class="form-group form-float">
                                    <select asp-for="bonusId" class="form-control show-tick" disabled>
                                        <option value="">-- Please select Employee  --</option>
                                        @{
                                            foreach (var item in bonusRep.GetAll())
                                            {
                                                <option value="@item.id">@item.bonusName  </option>
                                            }
                                        }
                                    </select>

                                </div>

                                <div class="form-group form-float">
                                    <div class="form-line m-l-10">
                                        <input type="text" class="form-control" onfocus="(this.type='date')" onblur="if(!this.value)this.type='text'" asp-for="date" disabled />
                                        <label class="form-label"> Bonus Date </label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <button class="btn btn-primary waves-effect" type="submit">Delete</button>
                    <a asp-controller="EmployeeBonus" asp-action="index" class="btn btn-success">Back</a>


                </form>
            </div>
        </div>
    </div>
</div>
