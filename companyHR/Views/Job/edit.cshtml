@model company.BL.Model.jobVM
@{
    ViewBag.Title = "  إضافة  قسم";
}
<div class="block-header">
    <a>الصفحة الرئيسية/ الاقسام/اضافة قسم</a>
    <h2>
        تعديل القسم
    </h2>
</div>

<form asp-asp-controller="Job" asp-action="edit" method="post">
    <div asp-validation-summary="All"></div>
    <label for="jobName">اسم القسم</label>
    <input type="text" class="form-control" asp-for="jobName" />
    <span asp-validation-for="jobName" class="text-danger"></span>
    <br />

    <label for="salary">salary </label>
    <input type="number" class="form-control" asp-for="salary" />
    <span asp-validation-for="salary" class="text-danger"></span>
    <center>
        <a asp-controller="department" asp-action="index" class="btn btn-success" >رجوع</a>
        <input type="submit" value="تعديل" class="btn btn-primary" />

    </center>
</form>
@section MicrosoftValidation{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}